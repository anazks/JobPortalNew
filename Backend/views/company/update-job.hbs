<link rel="stylesheet" href="/stylesheets/login.css">

<div class="container">
    <div class="card">
        <h1>Add New Program</h1>
        <form action="/company/update-job" method="post">
            <div class="form-group">
                <input type="text" class="form-control" name="title" value="{{job.title}}" id="exampleInputEmail1"
                    aria-describedby="emailHelp" placeholder="Enter Title" required>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="description" value="{{job.description}}" id="exampleInputEmail1"
                    aria-describedby="emailHelp" placeholder="Enter Program description" required>
            </div>
            <div class="form-group">
                <select name="experience" id="" class="form-control" required>
                    <option value=""> Experience required</option>
                    <option value="fresher">fresher</option>
                    <option value="0-1 year">0-1 year</option>
                    <option value="2 years">2 years</option>
                    <option value="3 years">3 years</option>
                    <option value="4 years">4 years</option>
                    <option value="5 years and above">5 years or above</option>
                </select>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="salary" value="{{job.salary}}" id="exampleInputEmail1"
                    aria-describedby="emailHelp" placeholder="Enter payment in â‚¹" required>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="area" value="{{job.area}}" id="exampleInputEmail1" aria-describedby="emailHelp"
                    placeholder="Enter area" required>
            </div>
            <input type="hidden" name="company_name" value="{{job.company_name}}">
            <input type="hidden" name="company_id" value="{{job.company_id}}">
            {{!-- <input type="hidden" name="company_id" value="{{job.company_id}}"> --}}
            <input type="hidden" name="job_id" value="{{job._id}}">
            <button type="submit" class="btn submit-btn">Upload Program</button>
        </form>
    </div>
</div>