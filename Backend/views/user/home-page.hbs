    <script>
        // Main accessibility preferences application
        document.addEventListener('DOMContentLoaded', function() {
            // Function to get cookie value
            function getCookieValue(name) {
                const value = `; ${document.cookie}`;
                const parts = value.split(`; ${name}=`);
                if (parts.length === 2) return parts.pop().split(';').shift();
            }

            // Read the cookie
            const raw = getCookieValue('accessibilityPreferences');
            let preferences = {};

            if (raw) {
                try {
                    const urlDecoded = decodeURIComponent(raw);
                    try {
                        preferences = JSON.parse(urlDecoded);
                        console.log('Accessibility preferences loaded:', preferences);
                    } catch (e) {
                        console.log('Error parsing preferences:', e);
                    }
                } catch (e) {
                    console.log('Error decoding preferences:', e);
                }
            }

            // Apply accessibility preferences
            applyAccessibilityPreferences(preferences);

            // Function to apply all preferences
            function applyAccessibilityPreferences(prefs) {
                if (!prefs) return;

                const body = document.body;
                
                // Dark Mode
                if (prefs.darkMode) {
                    body.classList.add('dark-mode');
                    console.log('Dark mode applied');
                }
                
                // Large Text
                if (prefs.largeText) {
                    body.classList.add('large-text');
                    console.log('Large text applied');
                    
                    // Specific element adjustments
                    const accButton = document.getElementById('Acc');
                    if (accButton) {
                        accButton.style.fontSize = '1.5em';
                        accButton.style.padding = '20px 30px';
                    }
                }
                
                // Dyslexia Font
                if (prefs.dyslexiaFont) {
                    body.classList.add('dyslexia-font');
                    console.log('Dyslexia font applied');
                }
                
                // High Contrast
                if (prefs.highContrast) {
                    body.classList.add('high-contrast');
                    console.log('High contrast applied');
                }
                
                // Grayscale
                if (prefs.grayscale) {
                    body.classList.add('grayscale');
                    console.log('Grayscale applied');
                }
                
                // Line Spacing
                if (prefs.lineSpacing) {
                    body.classList.add('line-spacing');
                    console.log('Line spacing applied');
                }
                
                // Cursor Enlarge
                if (prefs.cursorEnlarge) {
                    body.classList.add('cursor-enlarge');
                    document.documentElement.style.setProperty('--cursor-size', '20px');
                    console.log('Large cursor applied');
                }
                
                // Text-to-Speech
                if (prefs.textToSpeech) {
                    console.log('Text-to-speech enabled');
                    // This would be implemented in the speakText functions
                }
            }

            // Text-to-speech functionality
            function speakText(text) {
                if ('speechSynthesis' in window) {
                    const utterance = new SpeechSynthesisUtterance(text);
                    utterance.lang = 'en-US';
                    speechSynthesis.speak(utterance);
                } else {
                    alert('Your browser does not support text-to-speech.');
                }
            }

            // Set up text-to-speech for about section
            const speakButton = document.getElementById('speak-button');
            const textElement = document.getElementById('about-us-text');
            
            if (speakButton && textElement) {
                speakButton.addEventListener('click', function() {
                    const text = textElement.textContent;
                    speakText(text);
                });
                
                // Mouse hover functionality
                const headerSection = document.querySelector('.section-header');
                
                if (headerSection) {
                    headerSection.addEventListener('mouseenter', function() {
                        if (preferences.textToSpeech) {
                            const text = textElement.textContent;
                            speakText(text);
                        }
                    });
                    
                    headerSection.addEventListener('mouseleave', function() {
                        window.speechSynthesis.cancel();
                    });
                }
            }

            // Keyboard shortcuts modal
            const showShortcuts = document.getElementById('show-shortcuts');
            const shortcutsModal = document.getElementById('shortcuts-modal');
            
            if (showShortcuts) {
                showShortcuts.addEventListener('click', function() {
                    $(shortcutsModal).modal('show');
                });
            }
            
            // Listen for ? key to show shortcuts
            document.addEventListener('keydown', function(e) {
                // ? key
                if (e.key === '?' || e.keyCode === 191) {
                    $(shortcutsModal).modal('show');
                }
                
                // Escape key to close dropdowns
                if (e.key === 'Escape' || e.keyCode === 27) {
                    document.querySelectorAll('.menu-has-children.keyboard-active').forEach(el => {
                        el.classList.remove('keyboard-active');
                    });
                }
            });
            
            // Handle keyboard navigation for dropdown menus
            const dropdownMenus = document.querySelectorAll('.menu-has-children > a');
            dropdownMenus.forEach(menu => {
                menu.addEventListener('keydown', function(e) {
                    // Enter or Space to open dropdown
                    if (e.key === 'Enter' || e.key === ' ' || e.keyCode === 13 || e.keyCode === 32) {
                        e.preventDefault();
                        const parent = this.parentElement;
                        
                        // Toggle active state
                        if (parent.classList.contains('keyboard-active')) {
                            parent.classList.remove('keyboard-active');
                        } else {
                            // Remove active class from all dropdowns
                            document.querySelectorAll('.menu-has-children').forEach(el => {
                                el.classList.remove('keyboard-active');
                            });
                            
                            // Add active class to current dropdown
                            parent.classList.add('keyboard-active');
                            
                            // Focus first item in dropdown
                            const firstItem = parent.querySelector('ul li a');
                            if (firstItem) {
                                setTimeout(() => {
                                    firstItem.focus();
                                }, 100);
                            }
                        }
                    }
                    
                    // Down arrow to navigate to dropdown
                    if (e.key === 'ArrowDown' || e.keyCode === 40) {
                        e.preventDefault();
                        const parent = this.parentElement;
                        parent.classList.add('keyboard-active');
                        
                        // Focus first item in dropdown
                        const firstItem = parent.querySelector('ul li a');
                        if (firstItem) {
                            firstItem.focus();
                        }
                    }
                });
            });
            
            // Make accesskeys work across different browsers/OS
            document.querySelectorAll('[accesskey]').forEach(el => {
                const key = el.getAttribute('accesskey');
                el.setAttribute('title', el.getAttribute('title') || '' + ' (Alt+' + key + ')');
            });
            
            // Announce keyboard mode when Tab is used
            let usingKeyboard = false;
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Tab' || e.keyCode === 9) {
                    if (!usingKeyboard) {
                        usingKeyboard = true;
                        // Show keyboard navigation helper briefly
                        const helper = document.createElement('div');
                        helper.style.position = 'fixed';
                        helper.style.bottom = '20px';
                        helper.style.right = '20px';
                        helper.style.padding = '10px';
                        helper.style.background = 'rgba(0,0,0,0.8)';
                        helper.style.color = 'white';
                        helper.style.borderRadius = '5px';
                        helper.style.zIndex = '9999';
                        helper.style.transition = 'opacity 0.3s';
                        helper.innerHTML = 'Keyboard navigation active. Press ? for help.';
                        document.body.appendChild(helper);
                        
                        setTimeout(() => {
                            helper.style.opacity = '0';
                            setTimeout(() => {
                                document.body.removeChild(helper);
                            }, 300);
                        }, 3000);
                    }
                }
            });
            
            document.addEventListener('mousedown', function() {
                usingKeyboard = false;
            });

            // Apply zoomable text to about section
            function makeTextZoomable() {
                const paragraphs = document.querySelectorAll('#about p');
                
                paragraphs.forEach(paragraph => {
                    paragraph.classList.add('accessible-paragraph');
                    const text = paragraph.textContent;
                    paragraph.textContent = '';
                    
                    text.split(' ').forEach((word, index, array) => {
                        const span = document.createElement('span');
                        span.classList.add('zoomable-text');
                        span.textContent = word + (index < array.length - 1 ? ' ' : '');
                        paragraph.appendChild(span);
                    });
                });
            }
            
            makeTextZoomable();
        });
    </script>

