    <!-- Text-to-Speech JavaScript -->
    <script>
        // Text-to-speech functionality
        function speakText(text) {
            // Clean text (remove the speaker icon part)
            const cleanText = text.replace(/\s*\u{1F508}\s*/u, '');
            
            // Stop any ongoing speech
            if (window.speechSynthesis) {
                window.speechSynthesis.cancel();
            }
            
            // Create a new speech synthesis utterance
            const utterance = new SpeechSynthesisUtterance(cleanText);
            
            // Get available voices
            let voices = window.speechSynthesis.getVoices();
            
            // Set voice to a default English voice if available
            setTimeout(() => {
                voices = window.speechSynthesis.getVoices();
                const englishVoice = voices.find(voice => voice.lang.includes('en'));
                if (englishVoice) {
                    utterance.voice = englishVoice;
                }
                
                // Speak the text
                window.speechSynthesis.speak(utterance);
            }, 100);
            
            // Add visual indicator for speaking
            const elements = document.querySelectorAll('.speech-text');
            elements.forEach(el => {
                el.classList.remove('speaking');
                if (el.textContent.includes(cleanText)) {
                    el.classList.add('speaking');
                }
            });
            
            // Remove visual indicator when speech ends
            utterance.onend = function() {
                elements.forEach(el => {
                    el.classList.remove('speaking');
                });
            };
        }
        
        // Initialize speech synthesis when the page loads
        window.onload = function() {
            if ('speechSynthesis' in window) {
                // Trigger voices loading
                speechSynthesis.getVoices();
            } else {
                console.error('Text-to-speech not supported in this browser');
                // Hide all speak buttons if not supported
                const speakButtons = document.querySelectorAll('.speak-btn');
                speakButtons.forEach(btn => {
                    btn.style.display = 'none';
                });
            }
        };
    </script>
